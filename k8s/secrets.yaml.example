# ⚠️ EXAMPLE SECRETS FILE - DO NOT COMMIT WITH REAL VALUES
# Copy this file to secrets.yaml and replace with actual secure values
# 
# Usage:
#   cp secrets.yaml.example secrets.yaml
#   # Edit secrets.yaml with real values
#   kubectl apply -f secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: nadun-task-app
type: Opaque
stringData:
  # JWT Secret - MUST be at least 256 bits (32 characters)
  # Generate with: openssl rand -base64 32
  jwt-secret: "CHANGE-THIS-TO-SECURE-256-BIT-SECRET-KEY-MINIMUM-32-CHARS-REQUIRED"
  
  # PostgreSQL Password - Use strong password
  # Generate with: openssl rand -base64 16
  postgres-password: "CHANGE-THIS-TO-SECURE-DATABASE-PASSWORD"

# Security Best Practices:
# 1. Never commit secrets.yaml with real values to Git
# 2. Use strong, randomly generated secrets
# 3. Rotate secrets regularly
# 4. Consider using GKE Secret Manager or sealed-secrets for production
# 5. Different secrets for dev/staging/production environments
#
# For production, create secrets directly in cluster:
# kubectl create secret generic app-secrets \
#   -n nadun-task-app \
#   --from-literal=jwt-secret='YOUR-SECURE-SECRET' \
#   --from-literal=postgres-password='YOUR-SECURE-PASSWORD'
